
@{
    Layout = null;
}

<!DOCTYPE html>

<html  lang="tr">
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
    <link rel="stylesheet"
          href="https://use.fontawesome.com/releases/v5.15.4/css/all.css" />
    <link href="~/css/login.css?@(DateTime.Now.Ticks)" rel="stylesheet" />

    <link href="~/lib/toastr/dist/css/toasting.css" rel="stylesheet" />
</head>
<body>
    <div class="container">
        <form asp-action="index" asp-controller="login"
               data-ajax="true"
              data-ajax-method="POST"
              data-ajax-begin="formBegin"
              data-ajax-success="formSuccess"
              data-ajax-failure="formError">
            <div class="box">
                <h1>Giriş</h1>
                <div class="user">
                    <i class="fas fa-user"></i>
                    <input type="text"
                           name="username"
                           id="username"
                           autocomplete="off"
                           placeholder="Kullanıcı Adı" />
                    <i class="fas fa-unlock-alt"></i>
                    <input type="password"
                           name="password"
                           id="password"
                           autocomplete="off"
                           placeholder="Şifreniz" />
                </div>
                <p class="reset-password" onclick="GoToLink('Login/ForgotPassword')">Şifrenizi mi unuttunuz?</p>
                <div class="login-btn">
                    <button class="btn">Giriş</button>
                    <p class="signup">Üye Değil Misin? <span onclick="GoToLink('create-user')"><a>Kayıt Ol</a></span></p>
                </div>
            </div>
        </form>
    </div>
    <script src="~/lib/ajaxForm/jquery-3.5.1.min.js"></script>
    <script src="~/lib/ajaxForm/jquery.validate.min.js"></script>
    <script src="~/lib/ajaxForm/jquery.unobtrusive-ajax.min.js"></script>
    <script src="~/lib/ajaxForm/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/toastr/dist/js/toasting.js"></script>
    <script src="~/js/site.js?@(DateTime.Now.Ticks)"></script>
    <script>
        function GoToLink(link) {
            window.location = "/" + link;
        }
    </script>
</body>
</html>

